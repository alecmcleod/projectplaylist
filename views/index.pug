extends layout

block content
  #img
    image.logo(src='/assets/updated_logo.png')

  #info
    p
      | Explore and collaborate on playlists with the world.
      br
      |  Sign in with Spotify to start now!

  #login_butt
    a(href='/login_create')
      img(style='vertical-align:middle', src='/assets/spotty.png')
      |   Create a Playlist
  #login_butt
    a(href='/login_join')
      img(style='vertical-align:middle', src='/assets/spotty.png')
      |   Join a PLaylist

  h1 Dynamic content

  if error
    p Error getting dynamic content.
  else
    p The library has the following record counts:

    ul
      li #[strong Playlists:] !{data.playlist_count}